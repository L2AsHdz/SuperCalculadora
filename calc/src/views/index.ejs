<!DOCTYPE html>
<html lang="en">

<head>
    <title>Super Calculadora</title>
    <%- include('partials/header.ejs'); %>
    <link rel="stylesheet" href="css/styles.css">
</head>

<body>

    <%- include('partials/navBar.ejs'); %>


    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Realizar Operacion</h3>
                    </div>
                    <div class="card-body">
                        <form action="/operar" method="POST" name="calc" id="calc">
                            <div class="form-group">
                                <label for="numero1">Primer numero</label>
                                <input type="text" class="form-control" placeholder="Numero 1" id="numero1"
                                    name="numero1">
                                <span class="error d-none" id="errNum1"></span>
                            </div>
                            <div class="form-group mt-2">
                                <label for="numero2">Segundo numero</label>
                                <input type="text" class="form-control" placeholder="Numero 2" id="numero2"
                                    name="numero2">
                                <span class="error d-none" id="errNum2"></span>
                            </div>
                            <div class="form-group">
                                <label for="sel1">Operacion a realizar:</label>
                                <select class="form-control" id="operacion" name="operacion">
                                    <option value="">Seleccione...</option>
                                    <option value="suma">Suma</option>
                                    <option value="resta">Resta</option>
                                    <option value="multiplicacion">Multiplicacion</option>
                                    <option value="division">Division</option>
                                    <option value="potencia">Potencia</option>
                                </select>
                                <span class="error d-none" id="errOp"></span>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block mt-3" id="operar">Operar</button>
                        </form>
                        <br>
                        <% if(resultado == 'null'){ %>
                        <% } else{ %>
                            <div class="alert alert-success" role="alert">
                                El resultado es : <%=resultado%>
                            </div>
                        <% } %>
                    </div>
                </div>
            </>
        </div>
    </div>

    <%- include('partials/extrasJS.ejs'); %>

    <script src="js/app.js"></script>
</body>

</html>